<div class="card m-auto mb-3" style="width: 100%; max-width: 960px">
  <div class="card-body">
    <form enctype="multipart/form-data" accept-charset="UTF-8" action="/post/create" method="post">
      <input type="hidden" name="community_id" value="<%= community_id %>">
      <h5 class="card-title"><%= t('create_new_post') %></h5>
      <p class="card-text">
        <div class="input-group mb-3">
          <textarea required oninvalid="setCustomValidity('<%= t('post_text_required') %>')" oninput="setCustomValidity('')" name="post_text" class="form-control" id="exampleFormControlTextarea1" rows="3" style="direction: rtl;"></textarea>
          <button onclick="document.getElementById('image').click()" class="btn btn-primary" type="button">
            <span class="material-symbols-outlined"> image </span>
          </button>
        </div>
        <img id="image-preview" style="width: 300px; height: 200px; object-fit: cover; display: none" />
        <input onchange="
          document.getElementById('image-preview').src = window.URL.createObjectURL(this.files[0]);
          document.getElementById('image-preview').style.display = '';
        " name="image" class="form-control" type="file" id="image" style="display: none" >
      </p>
      <button class="btn btn-primary" type="submet"><%= t('create') %></button>
    </form>
  </div>
</div>
